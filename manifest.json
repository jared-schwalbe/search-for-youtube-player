{
  "name": "Search for YouTube Player",
  "description": "Add search functionality to the YouTube video player for videos with closed captions",
  "author": "Jared Schwalbe",
  "version": "2.0.0",
  "manifest_version": 3,
  "icons": {
    "16": "img/icon_16.png",
    "48": "img/icon_48.png",
    "128": "img/icon_128.png"
  },
  "content_scripts": [
    {
      "run_at": "document_end",
      "matches": ["*://*.youtube.com/*"],
      "js": [
        "src/lib/jquery-3.6.0.min.js",
        "src/lib/resizeSensor.js",
        "src/lib/elementQueries.js",
        "src/constants/classes.js",
        "src/constants/selectors.js",
        "src/app.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "matches": ["*://*.youtube.com/*"],
      "resources": [
        "src/html/searchButton.html",
        "src/html/searchMenu.html"
      ]
    }
  ]
}
